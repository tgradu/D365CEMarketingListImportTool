<Window x:Class="D365CEMarketingListImportTool.Views.ExcelToCrmListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D365CEMarketingListImportTool.ViewModels"
        mc:Ignorable="d"
        Title="ExcelToCrmListWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="25,25,0,0" VerticalAlignment="Top" Width="444">
            <Label Content="&#xD;&#xA;&#xD;&#xA;Connection Details"/>
        </Border>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="282,39,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="168"/>
        <Label Content="Connected To" HorizontalAlignment="Left" Margin="194,39,0,0" VerticalAlignment="Top"/>
        <Label Content="Connected As" HorizontalAlignment="Left" Margin="194,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LoggedUser" HorizontalAlignment="Left" Height="23" Margin="282,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" 
                 Text="{Binding LoggedUser}"/>
    </Grid>
</Window>
